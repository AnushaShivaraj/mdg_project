<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core" xmlns:f="sap.ui.layout.form" xmlns:l="sap.ui.layout">
	<Dialog title="CreateApplication" contentWidth="25%" class="sapUiSizeCompact">
		<endButton>
			<Button text="Cancel" press="handleApplicationCancel1"/>
		</endButton>
		<beginButton>
			<Button text="Save" press="handleApplicationSave1"/>
		</beginButton>
		<f:SimpleForm minWidth="1024" maxContainerCols="2" title="" editable="true" layout="ResponsiveGridLayout" labelSpanL="4" labelSpanM="12"
			adjustLabelSpan="true" emptySpanL="0" emptySpanM="0" columnsL="2" columnsM="2">
			<f:content>
				<Label text="ApplicationName" />
				<Input></Input>
				<Label text="Application Description" />
				<Input></Input>
				<Label text="Application Url"/>
				<Input></Input>
			</f:content>
		</f:SimpleForm>
	</Dialog>
</core:FragmentDefinition>