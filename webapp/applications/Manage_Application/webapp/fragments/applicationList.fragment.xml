<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core" xmlns:f="sap.ui.layout.form">
	<SelectDialog title="{i18n>SelectApplications}" confirmButtonText="{i18n>update}" liveChange="handleAppListSearch"
		confirm="handleConfirmAppList" growingThreshold="20" cancel="handleCloseAppList" items="{/}"  draggable="true"
		multiSelect="true" rememberSelections="false">
		<!--<StandardListItem selected="{path: 'applicationid', formatter: '.isAppAssigned'}" title="{appModel>name}"-->
		<StandardListItem selected="{attributes/applicationID'}" title="{attributes/name}"
			description="{attributes/description}"/>
	</SelectDialog>
</core:FragmentDefinition>