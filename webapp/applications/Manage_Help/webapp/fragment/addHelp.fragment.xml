<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core" xmlns:f="sap.ui.layout.form" xmlns:u="sap.ui.unified">
	<Dialog title="Add Help/FAQ " contentWidth="30%" class="sapUiSizeCompact">
		<endButton>
			<Button text="Cancel" press="handleAddHelpCancelPress"/>
		</endButton>
		<beginButton>
			<Button text="Save" press="handleAddHelpOkPress"/>
		</beginButton>
		<f:SimpleForm minWidth="1024" maxContainerCols="2" editable="true" layout="ResponsiveGridLayout" labelSpanL="3" labelSpanM="3"
			emptySpanL="4" emptySpanM="4" columnsL="1" columnsM="1" class="editableForm">
			<f:content>
				<Label required="true" text="Topic Name"/>
				<Input/>
				<Label required="true" text="Description"/>
				<TextArea/>
			</f:content>
		</f:SimpleForm>
	</Dialog>
</core:FragmentDefinition>